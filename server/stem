import nltk
from nltk.stem.isri import ISRIStemmer
from nltk.corpus import wordnet
from itertools import product

list1 = ['طول']
list2 = ['طول', 'طويلته','اطوال', 'طوله']
syns1 = set(ss for word in list1 for ss in wordnet.synsets(word))
syns2 = set(ss for word in list2 for ss in wordnet.synsets(word))

best = max((wordnet.wup_similarity(s1, s2) or 0, s1, s2) for s1, s2 in product(syns1, syns2))
print(best)


